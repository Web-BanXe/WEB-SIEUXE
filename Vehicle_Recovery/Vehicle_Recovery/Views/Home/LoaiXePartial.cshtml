@model IEnumerable<Vehicle_Recovery.Models.LoaiXe>
<div class="thumbnail">
    <div class="list-group">
        <div class="row" style="margin:0;text-align:center">
            <h3 style="color:#141414;font-weight:bold;">
                Dòng xe
            </h3>
        </div>
        <div class="row" style="margin:0;">
            @foreach (var loai in Model)
            {
                <a href="@Url.Action("DongXe", "Home", new { maloai = loai.MaLoai })">
                    <div class="list-group-item">
                        @loai.TenLoai
                    </div>
                </a>
            }
        </div>
    </div>
</div>
