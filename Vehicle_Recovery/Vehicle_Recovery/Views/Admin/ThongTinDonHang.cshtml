@model Vehicle_Recovery.Models.DonDatHang

@{
    ViewBag.Title = "Thông tin đơn đặt hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Khách hàng: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => Model.User.HoVaTen)
        </dd>
        <dt>
            @Html.DisplayName("Địa chỉ: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.DiaChiThuongTru)
        </dd>
        <dt>
            @Html.DisplayName("Điện thoại: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.SDT)
        </dd>
        <dt>
            @Html.DisplayName("Email: ")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt>
            @Html.DisplayName("Giới tính: ")
        </dt>
        @if (Model.User.GioiTinh)
        {
            <dd>
                Nam
            </dd>
        } else
        {
            <dd>
                Nữ
            </dd>
        }
        <dt>
            @Html.DisplayName("Ngày đặt: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayDat)
        </dd>
        <dt>
            @Html.DisplayName("Ngày giao: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayGiao)
        </dd>
        <dt>
            @Html.DisplayName("Thanh toán: ")
        </dt>

        <dd>
            @if (Model.DaGiaoHang)
            {
                @Html.DisplayName("Đã thanh toán")
            } else
            {
                @Html.DisplayName("Chưa thanh toán")
            }
        </dd>

        <dt>
            @Html.DisplayName("Giao hàng: ")
        </dt>

        <dd>
            @if (Model.DaThanhToan)
            {
                @Html.DisplayName("Đã giao hàng")
            } else
            {
                @Html.DisplayName("Chưa giao hàng")
            }
        </dd>
    </dl>
</div>
<div>
    @Html.Action("ChiTietDDH", new { soddh = Model.SoDDH })
</div>
<p>
    @Html.ActionLink("Sửa", "SuaDonDatHang", new { soddh = Model.SoDDH }) |
    @Html.ActionLink("Back to List", "DonDatHang")
</p>
