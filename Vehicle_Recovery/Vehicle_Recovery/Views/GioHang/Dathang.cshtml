@using Vehicle_Recovery.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutSwift.cshtml";
} <h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold">
        <td>Mã xe</td>
        <td>Tên xe</td>
        <td>
            Hình ảnh
        </td>
        <td>Số lượng</td>
        <td>Đơn giá (VNĐ)</td>
        <td>Khuyến mãi (VNĐ)</td>
        <td>Tổng tiền (VNĐ)</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.MaXe</td>
            <td>@item.TenXe</td>
            <td><img src="/Img/@item.HinhAnh" /></td>
            <td>@item.SoLuong</td>
            <td>@String.Format("{0:0,0,0}", item.DonGia)</td>
            <td>@String.Format("{0:0,0,0}", item.KhuyenMai)</td>
            <td>@String.Format("{0:0,0,0}", item.TongTien)</td>
        </tr>
    }
    <tr style="font-weight:bold;text-align:right;color:red">
        <td colspan="3">Số lượng xe :@ViewBag.SoLuong</td>
        <td colspan="3">Tổng tiền:@String.Format("{0:0,0,0}", ViewBag.TongTien) VNĐ</td>
    </tr>
</table>

<h2 style="text-align:center">Thông tin đặt hàng</h2>
@{ 
    User user = (User)Session["taikhoan"];
}
<table align="center">
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <tr style="height:40px">
        <td>Họ tên khách hàng:</td>
        <td style="font-weight:bold">@user.HoVaTen</td>
    </tr>
    <tr style="height:40px">
        <td>Email:</td>
        <td style="font-weight:bold">@user.Email</td>
    </tr>
    <tr style="height:40px">
        <td>Địa chỉ:</td>
        <td style="font-weight:bold">@user.DiaChiThuongTru</td>
    </tr>
    <tr style="height:40px">
        <td>Điện thoại:</td>
        <td style="font-weight:bold">@user.SDT</td>
    </tr>
    <tr style="height:40px">
        <td>Ngày đặt:</td>
        <td style="font-weight:bold">@DateTime.Now.ToShortDateString()</td>
    </tr>
    <tr style="height:40px">
        <td>Ngày giao:</td>
        <td style="font-weight:bold">
            <input type="date" name="Ngaygiao"/>
        </td>
    </tr>
    <tr style="height:40px">
        <td style="font-weight:bold">
            <input type="submit" value="ĐỒNG Ý ĐẶT HÀNG" />
        </td>
    </tr>

}
</table>
