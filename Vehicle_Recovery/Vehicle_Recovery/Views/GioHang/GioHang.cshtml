@using Vehicle_Recovery.Models
@model List<GioHang>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_LayoutShoppingCard.cshtml";
}

<div id="title-shoppingcard-partial">
    Giỏ hàng
</div>
<div id="info-shopping-card-partial">

    <br />
    <table border="1" width="100%" style="text-align: center">
        <tr>
            <td width="5%">
                Mã xe
            </td>
            <td width="30%">
                Hình ảnh
            </td>
            <td width="15%">
                Tên xe
            </td>
            <td width="5%">
                Số lượng
            </td>
            <td width="15%">
                Đơn giá (VNĐ)
            </td>
            <td width="15%">
                Khuyến mãi (VNĐ)
            </td>
            <td width="15%">
                Tổng tiền (VNĐ)
            </td>
            <td>
                Xóa
            </td>
        </tr>
        @using (Html.BeginForm())
        {
            foreach (var giohang in Model)
            {
            <tr>
                <td>
                    @giohang.MaXe
                </td>
                <td>
                    <img src="~/Img/@giohang.HinhAnh" width="100%" />
                </td>
                <td>
                    <a href="@Url.Action("ThongTin","SanPham", new { masp =giohang.MaXe })">@giohang.TenXe</a>
                </td>
                <td>
                    <input type="number" name="sl @giohang.MaXe" value="@giohang.SoLuong" />
                </td>
                <td>
                    @string.Format("{0:0,000}", giohang.DonGia)
                </td>
                <td>
                    @string.Format("{0:0,000}", (giohang.KhuyenMai / 100 * giohang.DonGia))
                </td>
                <td>
                    @string.Format("{0:0,000}", giohang.TongTien)
                </td>
                <td>
                    <input type="checkbox" name="xoa @giohang.MaXe" />
                </td>
            </tr>
            }
            <tr style="border-left:none; border-right: none; border-bottom: none">
                <td colspan="4" style="border-right: none">
                    <a class="btn btn-danger" href="#">Xóa tất cả</a>
                </td>
                <td colspan="4">
                    <input type="submit" class="btn btn-success" value="Xác nhận thay đổi" />
                </td>
            </tr>
            <tr style="border-left: none; border-right: none; border-bottom: none">
                <td colspan="9">
                    <a class="btn btn-default" href="#">Thanh toán</a>
                </td>
            </tr>
        }
    </table>
</div>